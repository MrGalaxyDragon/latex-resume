\newcommand{\HLine}{\noindent\rule{\linewidth}{0.5pt}}

\newcommand{\Heading}[1]{\textbf{\textsc{\large #1}}}

%% source: https://tex.stackexchange.com/questions/224624/knowledge-indicators/224637#224637
\newcommand{\skill}[1][3]{%
    \setlength{\unitlength}{1ex}%
    \begin{picture}(1,1.8)
        \linethickness{0.3ex}%
        \textcolor{gray!15}{\multiput(0, 0.15)(0, 0.6){3}{\line(1,0){1}}}
        \multiput(0, 0.15)(0, 0.6){#1}{\line(1,0){1}}
    \end{picture}%
}

\newcommand{\ProgrammingLanguage}[3]{%
    \item #1 \hfill \skill[#2] \\ {\footnotesize #3}
}